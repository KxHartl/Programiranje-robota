PROGRAM KAREL_02
VAR
  i, STATUS: INTEGER
  p1 : XYZWPR
  
BEGIN  
	
    $GROUP[1].$UFRAME = $MNUFRAME[1,1];
    $GROUP[1].$UTOOL =  $MNUTOOL[1,1]
    $GROUP[1].$MOTYPE=LINEAR; 
    $GROUP[1].$SPEED=300
    $GROUP[1].$TERMTYPE=NODECEL
    
    P1=CURPOS(0,0)

    FOR i=1 TO 5 DO  
    
        P1.x=P1.x+20;  P1.y=P1.y-10
        WRITE(p1,CR)
             MOVE TO P1        		
       DELAY 3000
 
  ENDFOR

  DELAY 1000
  WRITE('KRAJ',CR)
  
END KAREL_02